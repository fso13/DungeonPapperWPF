<Window x:Class="DungeonPapperWPF.windows.LaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungeonPapperWPF.windows"
        mc:Ignorable="d"
        Title="LaunchWindow" Height="328" Width="500" Background="#FF8E744D" SizeToContent="WidthAndHeight" MinWidth="500" MinHeight="328" WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RenderTransform>
            <ScaleTransform x:Name="ScaleTransform" CenterX="0" CenterY="0" ScaleX="1" ScaleY="1"/>
        </Grid.RenderTransform>
        <Grid Height="214" VerticalAlignment="Top" HorizontalAlignment="Left" Width="146" Margin="172,50,0,0">
            <Button x:Name="NewGameBtn" Content="Новая игра" HorizontalAlignment="Center" VerticalAlignment="Top" Height="49" Width="146" Click="NewGameBtn_Click"/>
            <Button x:Name="SettingsGameBtn" Content="Настройки" HorizontalAlignment="Center" VerticalAlignment="Center" Height="49" Width="146" Click="SettingsGameBtn_Click"/>
            <Button x:Name="RatingGameBtn" Content="Рейтинг" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Height="49" Width="146" Click="RatingGameBtn_Click"/>

        </Grid>

    </Grid>
</Window>
